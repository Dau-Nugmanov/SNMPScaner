@model UI.Models.DeviceTypeModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    <script src="~/Scripts/jquery-1.7.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
    
        <fieldset>
            <legend></legend>
            @if (ViewData["message_error"] != null)
            {
                <div class="alert alert-error field-validation-error">
                    <p>@ViewData["message_error"]</p>
                </div>
            }
            @if (ViewData["message"] != null)
            {
                <div class="alert alert-success">
                    <p>@ViewData["message"]</p>
                </div>

            }
            <div class="editor-label">
                @Html.HiddenFor(model => model.IdDeviceType)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.DeviceTypeName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.DeviceTypeName)
                @Html.ValidationMessageFor(model => model.DeviceTypeName)
            </div>

            <p style="margin-top:10px;">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </p>
        </fieldset>
    }
</body>
</html>
