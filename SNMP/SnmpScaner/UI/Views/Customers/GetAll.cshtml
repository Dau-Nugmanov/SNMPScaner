@model IEnumerable<DomainModel.EfModels.Customer>

@{
    Layout = null;
}

<h2>Список заказчиков</h2>
<p>
    @Html.ActionLink("Добавить нового", "Add")
</p>
<table class="table table-hover">
    <tr>
        <th>
            Название заказчика
        </th>
        <th>Действия
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.IdCustomer }) |
                @Html.ActionLink("Удалить", "Remove", new { id = item.IdCustomer }, new { onclick = "return confirm('Вы увверены?');" })
            </td>
        </tr>
    }

</table>
