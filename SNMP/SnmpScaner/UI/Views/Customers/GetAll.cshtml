@model IEnumerable<DomainModel.EfModels.Customer>

@{
    Layout = null;
}

<h2 class="MainPanel_Index_Zag">
    Список заказчиков
    <p class="Sett_Ind_kn">
        @Html.ActionLink("Новый заказчик", "Add")
    </p>
</h2>
<table class="table table-hover">
    <tr>
        <th>
            Название заказчика
        </th>
        <th>Действия
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.IdCustomer }) |
                @Html.ActionLink("Удалить", "Remove", new { id = item.IdCustomer }, new { onclick = "return confirm('Вы увверены?');" })
            </td>
        </tr>
    }

</table>
