@model IEnumerable<DomainModel.EfModels.Report>

@{
    Layout = null;
}
<p>
    @Html.ActionLink("Добавить новый отчет", "Add")
</p>
<table class="table table-hover">
    <tr>
        <th>
            Название
        </th>
        <th>
            Путь к отчету
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReportName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReportPath)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.IdReport }) |
                @Html.ActionLink("Удалить", "Remove", new { id = item.IdReport }, new { onclick = "return confirm('Вы уверены?');" })
            </td>
        </tr>
    }

</table>
