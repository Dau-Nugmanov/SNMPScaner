@model IEnumerable<DomainModel.EfModels.DeviceEntity>

@{
    Layout = null;
}
<script type="text/javascript">
    $('input[type="checkbox"]').click(function () {
        $('input[type="checkbox"]').not(this).prop('checked', false);
    })
</script>

<table class="table table-hover">
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.CheckBox("customerChk", new { idNot = item.IdDeviceEntity, nameNot = item.Name })

            </td>
            <td>
                @item.Name
            </td>

        </tr>
    }

</table>
